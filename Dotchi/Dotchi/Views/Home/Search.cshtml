@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<Dotchi.Models.Dotchi.ShopInfo> ShopList = ViewBag.ShopList as List<Dotchi.Models.Dotchi.ShopInfo>;
    List<Dotchi.Models.Dotchi.RecommendTag> RecommendTagList = ViewBag.RecommendTag as List<Dotchi.Models.Dotchi.RecommendTag>;
}
<div id="pageSearchResult">
    <div class="header">
        <div class="inputArea">
			<input type="text" value="@(ViewBag.QueryString)" class="queryInput" placeholder="請輸入地區" />
			<a href="#" class="button search"><span>尋找餐廳</span></a>
		</div>	
		<div class="fbArea">
			<a href="#" class="button fb"><span>FB登入</span></a>
			<div class="user"><img alt="" src="https://graph.facebook.com/100000133231966/picture?type=large"></div>
		</div>
        <div class="searchbar">
            <div class="searchbox"><input type="text" value="@(ViewBag.QueryString)"></div>
            <a class="searchbutton" href="#">找餐廳</a>
        </div>
        <a class="fbLogin"></a>
    </div>
    <div class="main">
        @foreach (var shopItem in ShopList) 
        { 
        <div class="shopInfo">
            <div class="thumnail">
                <img src="@(shopItem.Cover)" title="@(shopItem.Name)" alt="@(shopItem.Name)" />
            </div>
            <div class="detail">
                <div class="name">@(shopItem.Name)</div>
                <div class="rating" data-rating="@(shopItem.Rating)">@(shopItem.Rating)</div>
                <div class="checkin">@(shopItem.Checkin)</div>
                <div class="friendList">
                    @foreach(var friendItem in shopItem.FriendDetail)
                    {   
                    <div class="friendItem">
                        <img src="@(friendItem.Thumbnail)" title="@(friendItem.Name)" alt="@(friendItem.Name)" />
                    </div>
                    }
                </div>
            </div>
            <div class="commentList">
                @foreach (var commentItem in shopItem.CommentList)
                { 
                <div class="commentItem">
                    <div class="userInfo">
                        <div class="userImage"><img src="@(commentItem.UserDetail.UserImage)" title="@(commentItem.UserDetail.UserName)" alt="@(commentItem.UserDetail.UserName)" /></div>
                        <div class="userName">@(commentItem.UserDetail.UserName)</div>
                        <div class="postTime">@(commentItem.Time)</div>
                    </div>
                    <div class="text">@(commentItem.Text)</div>
                    <div class="image">
                        <img src="@(commentItem.Image)" title="@(commentItem.UserDetail.UserName) at @(shopItem.Name)" alt="@(commentItem.UserDetail.UserName) at @(shopItem.Name)">
                    </div>
                </div>                
                }
            </div>
        </div>
        }
        <div class="tagArea">
            <ul class="tagLst">
                @foreach(var tagItem in RecommendTagList)
                {
                    <li>
                        <a class="tagLink" href="/Home/Search?q=@(tagItem.Name)">
                            <span class="tagName">@(tagItem.Name)</span>
                            <span class="shopNumer">@(tagItem.Number)</span>
                        </a>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>